<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" vgap="10.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fjwright.runreduce.templates.For">
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <Label prefWidth="400.0" text="Form a matrix in the top left-hand corner of the grid, leaving any cells outside this matrix empty. The right-most and lowest non-empty cells define the matrix size. Any empty cells within this matrix default to zero." textAlignment="CENTER" wrapText="true" GridPane.halignment="CENTER">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
    </Label>
    <VBox spacing="5.0" GridPane.rowIndex="1">
        <Label alignment="BOTTOM_LEFT" text="Iterate over a..." />
        <HBox alignment="BOTTOM_CENTER" spacing="5.0">
            <TabPane tabClosingPolicy="UNAVAILABLE">
                <Tab text="numerical range">
                    <AnchorPane>
                        <HBox alignment="CENTER" spacing="5.0">
                            <Label text="for" />
                            <TextField prefColumnCount="4" promptText="var" />
                            <Label text=":=" />
                            <TextField prefColumnCount="4" promptText="num" />
                            <Label text="step" />
                            <TextField prefColumnCount="4" promptText="num" />
                            <Label text="until" />
                            <TextField prefColumnCount="4" promptText="num" />
                        </HBox>
                    </AnchorPane>
                </Tab>
                <Tab text="list or expression">
                    <AnchorPane>
                        <HBox alignment="CENTER" spacing="5.0">
                            <Label text="for each" />
                            <TextField prefColumnCount="9" promptText="var" />
                            <ChoiceBox />
                            <TextField layoutX="50.0" layoutY="48.0" prefColumnCount="9" promptText="list" />
                        </HBox>
                    </AnchorPane>
                </Tab>
            </TabPane>
            <ChoiceBox />
        </HBox>
        <HBox alignment="CENTER">
            <TextField promptText="expression" />
        </HBox>
    </VBox>
    <HBox alignment="CENTER_RIGHT" spacing="20.0" GridPane.rowIndex="2">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <Button mnemonicParsing="false" onAction="#editButtonAction" text="Edit">
            <tooltip>
                <Tooltip text="Insert into input editor" />
            </tooltip>
        </Button>
        <Button mnemonicParsing="false" onAction="#evaluateButtonAction" text="Evaluate">
            <tooltip>
                <Tooltip text="Send to REDUCE" />
            </tooltip>
        </Button>
        <Button mnemonicParsing="false" onAction="#cancelButtonAction" text="Cancel" />
    </HBox>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</GridPane>
