<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" stylesheets="@templates.css" spacing="20.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="fjwright.runreduce.templates.SumProd">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <HBox alignment="CENTER">
        <Text fontSmoothingType="LCD"
              text="Only definite sums and products are supported, so all fields must be non-empty.
The control variable must be an identifier and the limits must be, or *evaluate* to, integers."
              textAlignment="CENTER" wrappingWidth="400.0"/>
    </HBox>
    <HBox alignment="CENTER" spacing="5.0">
        <ToggleButton fx:id="sumToggleButton" mnemonicParsing="false" onAction="#sumToggleButtonAction" selected="true"
                      styleClass="sum-prod-button" text="∑">
            <toggleGroup>
                <ToggleGroup fx:id="sumProdToggleGroup"/>
            </toggleGroup>
        </ToggleButton>
        <ToggleButton mnemonicParsing="false" onAction="#prodToggleButtonAction" styleClass="sum-prod-button" text="∏"
                      toggleGroup="$sumProdToggleGroup">
        </ToggleButton>
    </HBox>
    <HBox alignment="CENTER" styleClass="styled-textfields">
        <VBox alignment="CENTER">
            <HBox alignment="CENTER">
                <TextField fx:id="upLimTextField" alignment="CENTER" onKeyTyped="#intOrVarCheckKeyTyped"
                           prefColumnCount="3" promptText="int" styleClass="limit" text="5"/>
            </HBox>
            <Label fx:id="sumProdLabel" styleClass="sum-prod-symbol" text="∑"/>
            <HBox alignment="CENTER" spacing="2.0">
                <TextField fx:id="varTextField" alignment="CENTER" onKeyTyped="#varCheckKeyTyped" prefColumnCount="3"
                           promptText="var" styleClass="limit" text="i"/>
                <Label text="="/>
                <TextField fx:id="lowLimTextField" alignment="CENTER" onKeyTyped="#intOrVarCheckKeyTyped"
                           prefColumnCount="3" promptText="int" styleClass="limit" text="1"/>
            </HBox>
        </VBox>
        <TextField fx:id="operandTextField" prefColumnCount="8" text="ws"/>
    </HBox>
    <HBox alignment="CENTER_RIGHT" spacing="20.0">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <Button mnemonicParsing="false" onAction="#editButtonAction" text="Edit">
            <tooltip>
                <Tooltip text="Insert into input editor"/>
            </tooltip>
        </Button>
        <Button mnemonicParsing="false" onAction="#evaluateButtonAction" text="Evaluate">
            <tooltip>
                <Tooltip text="Send to REDUCE"/>
            </tooltip>
        </Button>
        <Button mnemonicParsing="false" onAction="#closeButtonAction" text="Close"/>
    </HBox>
</VBox>
