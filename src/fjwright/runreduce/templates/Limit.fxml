    <HBox alignment="CENTER" spacing="10.0" styleClass="styled-textfields">
        <VBox alignment="CENTER">
            <Label styleClass="lim-symbol" text="lim"/>
            <HBox alignment="CENTER" spacing="2.0">
                <TextField fx:id="varTextField" alignment="CENTER" onKeyTyped="#varCheckKeyTyped" prefColumnCount="3"
                           promptText="var" styleClass="limit" text="x"/>
                <Label styleClass="limit" text="â†’"/>
                <TextField fx:id="limPointTextField" alignment="CENTER" prefColumnCount="3" promptText="alg"
