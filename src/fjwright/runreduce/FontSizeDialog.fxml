<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="fjwright.runreduce.FontSizeDialog">
    <HBox alignment="CENTER">
        <children>
            <Label fx:id="defaultFontSizeLabel" alignment="CENTER" text="Default font size is 15"/>
        </children>
    </HBox>
    <HBox alignment="CENTER">
        <children>
            <Label fx:id="oldSizeDemoLabel" alignment="CENTER" minHeight="36.0" minWidth="565.0"
                   text="Sample text at old font size of 15">
                <font>
                    <Font name="Consolas" size="30.0"/>
                </font>
            </Label>
        </children>
    </HBox>
    <HBox alignment="CENTER" spacing="5.0">
        <children>
            <Label text="New font size:"/>
            <Spinner fx:id="newSizeValueSpinner" editable="true" style="-fx-max-width: 70;"/>
        </children>
    </HBox>
    <HBox alignment="CENTER">
        <children>
            <Label fx:id="newSizeDemoLabel" alignment="CENTER" minHeight="36.0" minWidth="565.0"
                   text="Sample text at new font size of 15">
                <font>
                    <Font name="Consolas" size="30.0"/>
                </font>
            </Label>
        </children>
    </HBox>
    <HBox alignment="CENTER_RIGHT" spacing="20.0">
        <children>
            <Button mnemonicParsing="false" onAction="#okButtonAction" text="OK"/>
            <Button mnemonicParsing="false" onAction="#cancelButtonAction" text="Cancel"/>
        </children>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
    </HBox>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</VBox>
